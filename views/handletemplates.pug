extends layout.pug

block title
	title Craft Africa - Template Handler

block content

	form(method="post" action="/admin/email" id="foo")
		input(type="text" name="templateName" value=template id="templateName" )
		br
		input(type="email" name="email" id="recipient" value=recipient)
		br
		input(type="text" name="subject" id="subject" value=subject)
		br
		textarea(name="message" form="foo" style="width:300px; height:150px;")= message
		br
		input(type="submit" id="submit")
