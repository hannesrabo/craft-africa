doctype html

block vars

html
	head
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css')
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
		link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet")
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js")
			| let $ = jQuery
		script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js')
		link(rel="stylesheet", href="/stylesheets/admin-stylesheet.css")
		// Favicon
		link(rel="icon" type="image/ico" href="/images/favicons/favicon.ico")
		link(rel="icon" type="image/png" href="/images/favicons/favicon-16x16.png" sizes="16x16")
		link(rel="icon" type="image/png" href="/images/favicons/favicon-32x32.png" sizes="32x32")
		link(rel="apple-touch-icon" href="/images/favicons/apple-touch-icon.png" sizes="180x180")
		link(rel="mask-icon" href="/images/favicons/safari-pinned-tag.svg" color="red")
		link(rel="manifest" href="/images/favicons/manifest.json")
		meta(name="msapplication-config" content="/images/favicon/ieconfig.xml")
		
		title
			block title
			| - Craft Africa

		block head

	body
		block nav
			nav.wrapper(style="background-color:white")
				.brand-logo(style="color:black; left: 50%;") #{title}
				a(href="#" data-activates="slide-out").button-collapse
					i.material-icons(style="color: black") menu
			ul#slide-out.side-nav.fixed
				li.logo
					img(src="https://craft-africa.com/images/craft_africa_logo.png" style="max-width:80%")
				li
					h5(style="padding: 0 32px;") Welcome #{username}

				li
					a(href='/admin/containers')
						i.material-icons(style="color: black") view_list
						|  Containers
				li
					a(href='/admin/defaultvalues')
						i.material-icons(style="color: black") assignment
						| Default Values
				li
					a(href='/admin/beertype')
						i.material-icons(style="color: black") view_stream
						| Beer types
				li
					a(href='/admin/email') 
						i.material-icons(style="color: black") email
						| Email system
				li
					a(href='/admin/statistics') 
						i.material-icons(style="color: black") equalizer
						| Statistics
				li
					a(href='/admin/users')
						i.material-icons(style="color: black") supervisor_account
						|  Administrators
				li
					a(href='/admin/logout' style="margin: 5% 24%; height: 30px; line-height: 30px; padding: 0 0.5rem;").btn Logout
		main

			block header

			block content

			block scripts

			block footer
	
	script.
		$(".button-collapse").sideNav();
