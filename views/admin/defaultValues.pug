extends layout.pug

block title
	title Craft Africa - Default Values

block header
	h3 Default Values

block content
	form(method="post" action="/admin/defaultvalues" style="padding: 10px 40px 20px 10px")
			.card
				.card-content
					span.card-title Ingredient cost
					.defaultCostIngredients
						input.validate(type="number" required name="hops"  placeholder='Hops ($)' value=ingredientCost.hops)
						input.validate(type="number" required name="barley" placeholder='Barley ($)' value=ingredientCost.barley)
						input.validate(type="number" required name="co2" placeholder='CO2 ($)' value=ingredientCost.co2)
						input.validate(type="number" required name="water" placeholder='Water ($)' value=ingredientCost.water)
						input.validate(type="hidden" name="id" value='beer._id')
						input.validate(type="hidden" name="status" value="unchanged")

			.card
				.card-content
					span.card-title Default Distribution (%)
					.defaultDistributionValues
					input.validate(type="number" required name="tapDist" placeholder='Tap (%)' value=defaultDistribution.tapDist)
					input.validate(type="number" required name="bottleDist" placeholder='Bottle (%)' value=defaultDistribution.bottleDist)
					input.validate(type="number" required name="kegDist" placeholder='Keg (%)' value=defaultDistribution.kegDist)
					input.validate(type="hidden" name="id" value='beer._id')
					input.validate(type="hidden" name="status" value="unchanged")

			.card
				.card-content
					span.card-title Default Threshhold for Activating Bottle/Keg Containers
					.defaultThreshhold
					input.validate(type="number" required name="bottleThresh"  placeholder='Bottle' value=defaultThreshold.bottleThresh)
					input.validate(type="number" required name="kegThresh"  placeholder='Keg' value=defaultThreshold.kegThresh)

			.card
				.card-content
					span.card-title Production Cost (per unit)
					.defaultCostValues
						input.validate(type="number" required name="tapCost"  placeholder='Tap ($)' value=productionCost.tapCost)
						input.validate(type="number" required name="bottleCost"  placeholder='Bottle ($)' value=productionCost.bottleCost)
						input.validate(type="number" required name="kegCost" placeholder='Keg ($)' value=productionCost.kegCost)
						input.validate(type="hidden" name="id" value='beer._id')
						input.validate(type="hidden" name="status" value="unchanged")

			.card
				.card-content
					span.card-title Selling Price (per unit)
					.defaultCostValues
						input.validate(type="number" required name="tapSell"  placeholder='Tap ($)' value=sellingPrice.tapSell)
						input.validate(type="number" required name="bottleSell"  placeholder='Bottle ($)' value=sellingPrice.bottleSell)
						input.validate(type="number" required name="kegSell" placeholder='Keg ($)' value=sellingPrice.kegSell)
						input.validate(type="hidden" name="id" value='beer._id')
						input.validate(type="hidden" name="status" value="unchanged")


			.card
				.card-content
					span.card-title Start Value for Production
					.defaultStartValueForProduction
						input.validate(type="number" required name="startValueForProduction"  placeholder='$' value=startValueForProduction)
						input.validate(type="hidden" name="id" value='beer._id')
						input.validate(type="hidden" name="status" value="unchanged")

			br
			input.btn.right.blue(type="submit" disabled=false name="submit" value="Submit")
			br
			br
			br
	
block scripts
	script(src="/js/adminDefaultValues.js")