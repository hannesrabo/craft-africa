extends layout.pug

block title
	title Craft Africa - Edit users

block vars
	- var title = "Modify users"
	
block content
	each user in users
		p= "Email: " + user.local.email
		p= "password: " + user.local.password
		form(method="post" action="/admin/users/delete")
			input(type="hidden" name="id" value=user._id)
			input(type="submit" value="Remove user")
		hr
				
block scripts