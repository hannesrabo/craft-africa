extends layout.pug

block title 
	|  - Contact

block nav
	nav.nav.small
		include partials/navbar
	.nav-filler

block content
	.contact-form
		.container-contact
			.text
				h1 Contact us
				p Email: someone@ca.com
				p Phone: +4612345789
				
			form(method="post" action="/email/send")
				input(type="text" name="message_template" value="standard-template" hidden)
				.input-row
					.name
						label(for="name") Name
						input(type="text" name="name" id="name")
					.email
						label(for="emailadress") Email
						input(type="email" name="emailadress" id="emailadress" required)
				.message
					label(for="message") Your message
					textarea(name="message" id="message" rows="10")
				.btn-row
					input(type="submit" value="Submit")

block navScript
	script(src="/js/navbarsmall.js")
