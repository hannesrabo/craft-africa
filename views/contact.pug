extends layout.pug

block title 
	|Contact -  

block description
	meta(name="description" content= "When you have read about us and are exited to start your own brand. Contact us at Craft Africa, and we will find a personal solution for you to develop you personal brand and take out you entrepreneurial spirit. ")

block header
	header.header.contact-form-header.half
		.title-text
			h1 Contact us
			.container
				.table-container
					table
						tr
							td Email:
							td
								a(href="mailto:info@craft-africa.com") info@craft-africa.com
						tr
							td Phone:
							td 
								a(href="tel:+4612345678") +4612345678

//- block nav
//- 	nav.nav.small
//- 		include partials/navbar
//- 	.nav-filler

block content
	.contact-form
		.container-contact
			form(method="post" action="/email/send")
				input(type="text" name="message_template" value="standard-template" hidden)
				.input-row
					.name
						label(for="name") Name
						input(type="text" name="name" id="name")
					.email
						label(for="emailadress") Email
						input(type="email" name="emailadress" id="emailadress" required)
				.message
					label(for="message") Your message
					textarea(name="message" id="message" rows="10")
				.btn-row
					input(type="submit" value="Submit")

