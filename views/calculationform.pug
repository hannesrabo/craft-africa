extends layout.pug

block title
	| - Calculation form

block header

block nav
	nav.nav.small
		include partials/navbar
	.nav-filler

block content
	div.calculation-form
		.container
			//- h1 Calculation form 
			//- p This is a calculation form
			.inputs
				.total-volume
					h3 Liters of Beer
					.slider-wrapper
						.slider-row
							input.slider(type="range" name="totalVolume" id="totalVolume" min=`${minTotalVolume}` max=`${maxTotalVolume}` data-thumbWidth="16")
							span 1000 liters
				.options
					.distribution
						h3 Finetune distribution (tap, keg, bottle)
						table.slider-wrapper
							tr
								td
									label Tap:
								td.slider-row
									input.slider.container-distribution(type="range" name="tap" min="0" max="1" step="0.01" data-thumbWidth="16")
									span 20%
							tr
								td
									label Keg:
								td.slider-row
									input.slider.container-distribution(type="range" name="keg" min="0" max="1" step="0.01" data-thumbWidth="16")
									span 20%
							tr
								td
									label Bottle:
								td.slider-row
									input.slider.container-distribution(type="range" name="bottle" min="0" max="1" step="0.01" data-thumbWidth="16")
									span 20%
					.addons
						h3 Addons
						table
							tr
								td Keg automation machine:
								td
									input(type="checkbox")
							tr
								td Bottle automation machine:
								td
									input(type="checkbox")
			.profit-box
				| Profit: 
				span.profit 12345
			.container-box
				.title
					h3 Container configuration
				.containers
					.container-wrapper
						.container-module
							.name-wrapper
								.name
									span.text A1
									svg.circle(data-fill="40")
										circle.stroke(cx="50%" cy="50%" r="40%" stroke-width="10px" fill="none")
						.container-module
						.container-module
				.advanced-tab(data-state="closed")
					.toggle
						a.show(href="#")
							span.fa.fa-angle-double-down
							| Show additional information
							span.fa.fa-angle-double-down
						a.hide(href="#")
							span.fa.fa-angle-double-up
							| Hide additional information
							span.fa.fa-angle-double-up
					.extra
						.module
							h3 A1:
							table
								tr
									td Container type:
									td Brewing
								tr
									td Brewing capacity:
									td 500l / batch
								tr
									td Fermenting capacity:
									td 4000l
						.module
							h3 A2:
							table
								tr
									td Container type:
									td Fermenting
								tr
									td Fermenting capacity:
									td 8000l


			//- p Distribution
			//- span.output economics output here...
			//- p Containers
			//- 	span.containers container output here...
			//- p Income statement
			//- 	span.income-statement Income statement here...
